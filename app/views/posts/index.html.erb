<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item description</th>
      <th>Supplier name</th>
      <th>Supplier description</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
 <% if user_signed_in? %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.item_name %></td>
        <td><%= post.item_description %></td>
        <td><%= post.supplier_name %></td>
        <td><%= post.supplier_description %></td>
        <!-- <td><%= post.user %></td> -->
      </tr>
    <% end %>
 <% else %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.item_name %></td>
        <td><%= post.item_description %></td>
        <td><%= post.supplier_name %></td>
        <td><%= post.supplier_description %></td>
        <!-- <td><%= post.user %></td> -->
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
 <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'Toppage', root_path %>
<% else %>
  <%= link_to 'New Post', new_post_path %>
  <%= link_to 'Toppage', root_path %>
<% end %>
